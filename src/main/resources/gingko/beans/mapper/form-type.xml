<!DOCTYPE mapper
		PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.gingko.app.persist.mapper.usk.FormTypeMapper">

	<resultMap id="formTypeMap" type="org.gingko.app.persist.domain.usk.FormType">
		<id column="form_type" property="formType"/>
		<result column="used" property="used"/>
	</resultMap>

    <select id="selectAll" resultMap="formTypeMap">
        select * from gingko.usk_form_type
    </select>

	<select id="selectByUsed" resultType="String">
		select "form_type" from gingko.usk_form_type where "used"=1
    </select>

    <select id="selectByFormType" resultMap="formTypeMap">
		select * from gingko.usk_form_type where "form_type"=#{formType}
    </select>

    <update id="update">
		update gingko.usk_form_type set "used"=#{used}
        <if test="formTypes!= null" > where "form_type" in
            <foreach item="item" index="index" collection="formTypes"
                     open="(" separator="," close=")">
                #{item}
            </foreach>
        </if>
	</update>

    <insert id="insert">
		insert into gingko.usk_form_type (
			"form_type", "used"
		) values (
			#{formType}, #{used}
		)
	</insert>

    <delete id="delete">
		delete from gingko.usk_form_type where "form_type"=#{formType}
	</delete>

</mapper>