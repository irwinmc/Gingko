<!DOCTYPE mapper
		PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.gingko.app.persist.mapper.MenuMapper">

	<resultMap id="menuMap" type="org.gingko.app.persist.domain.Menu">
		<id column="id" property="id"/>
		<result column="menu_id" property="menuId"/>
		<result column="text" property="text"/>
		<result column="parent_id" property="parentId"/>
		<result column="text" property="text"/>
		<result column="icon_cls" property="iconCls"/>
		<result column="qtip" property="qtip"/>
	</resultMap>

	<select id="selectByParentId" resultMap="menuMap">
		select * from gingko.sys_menu where "parent_id"=#{parentId} and "menu_id" in (select menu_id from gingko.sys_identity where "identity"=#{identity})
    </select>

    <select id="selectAll" resultMap="menuMap">
		select * from gingko.sys_menu
    </select>

</mapper>