<!DOCTYPE mapper
		PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.gingko.app.persist.mapper.SecHtmlIdxMapper">

	<resultMap id="secHtmlIdxMap" type="org.gingko.app.persist.domain.SecHtmlIdx">
		<result property="seq" column="seq"/>
		<result property="description" column="description"/>
		<result property="document" column="document"/>
		<result property="type" column="type"/>
		<result property="size" column="size"/>
		<result property="anchor" column="anchor"/>
		<result property="siid" column="siid"/>
		<result property="date" column="date"/>
		<result property="localFile" column="local_file"/>
	</resultMap>

	<select id="select" resultMap="secHtmlIdxMap">
		select * from gingko.gk_sec_html_idx
	</select>

	<select id="selectBySiid" parameterType="String" resultMap="secHtmlIdxMap">
		select * from gingko.gk_sec_html_idx where "siid"=#{siid}
	</select>

	<insert id="insert">
		insert into gingko.gk_sec_html_idx (
			"seq", "description", "document", "type", "size", "anchor", "siid", "date", "local_file"
		) values (
			#{seq}, #{description}, #{document}, #{type}, #{size},
			#{anchor}, #{siid}, #{date}, #{localFile}
		)
	</insert>

	<insert id="insertList" parameterType="java.util.List">
		insert into gingko.gk_sec_html_idx (
			"seq", "description", "document", "type", "size", "anchor", "siid", "date", "local_file"
		) values
		<foreach collection="list" item="item" index="index" open="(" separator="),(" close=")">
			#{item.seq}, #{item.description}, #{item.document}, #{item.type}, #{item.size},
			#{item.anchor}, #{item.siid}, #{item.date}, #{item.localFile}
		</foreach>
	</insert>

	<delete id="delete">
		delete from gingko.gk_sec_html_idx
	</delete>

	<delete id="deleteBySiid" parameterType="String">
		delete from gingko.gk_sec_html_idx where "siid"=#{siid}
	</delete>

	<delete id="deleteByDate" parameterType="String">
		delete from gingko.gk_sec_html_idx where "date"=#{date}
	</delete>
</mapper>